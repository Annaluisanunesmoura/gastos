.categoria-grafico-fill {
    height: 100%;
    background: linear-gradient(135deg, #F8BBD0 0%, #f48fb1 100%);
    border-radius: 10px;
    transition: width 0.5s ease;
}

.categoria-grafico-valor {
    font-weight: 600;
    color: #795548;
    min-width: 100px;
    text-align: right;
}

/* Responsividade para tabela */
@media (max-width: 768px) {
    .tabela-container {
        overflow-x: auto;
    }
    
    table {
        min-width: 600px;
    }
    
    .modal-content.xlarge {
        margin: 5% auto;
        width: 95%;
    }
    
    .resumo-anual {
        grid-template-columns: 1fr;
    }
}
