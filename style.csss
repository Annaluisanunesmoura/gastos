* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    font-size: 16px;
    -webkit-text-size-adjust: 100%;
    text-size-adjust: 100%;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #FFF8F0;
    color: #333;
    line-height: 1.6;
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

/* Header */
header {
    background: linear-gradient(135deg, #F8BBD0 0%, #f48fb1 100%);
    color: #5d4037;
    padding: 30px;
    border-radius: 15px;
    margin-bottom: 30px;
    box-shadow: 0 4px 15px rgba(248, 187, 208, 0.3);
}

header h1 {
    font-size: 2.5em;
    margin-bottom: 20px;
    font-weight: 600;
    text-align: center;
}

.header-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
}

.competencia-selector {
    display: flex;
    align-items: center;
    gap: 10px;
}

.competencia-selector label {
    font-weight: 600;
    color: #5d4037;
    font-size: 1.1em;
}

.competencia-selector select {
    padding: 12px 20px;
    border: 2px solid #F8BBD0;
    border-radius: 10px;
    background: white;
    font-size: 16px;
    color: #5d4037;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    min-height: 48px;
}

.competencia-selector select:hover {
    border-color: #f48fb1;
}

.competencia-selector select:focus {
    outline: none;
    border-color: #f48fb1;
    box-shadow: 0 0 0 3px rgba(248, 187, 208, 0.3);
}

.saldo-total h2 {
    font-size: 1.8em;
    font-weight: 300;
}

/* Dashboard */
.dashboard {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.card {
    background: white;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(248, 187, 208, 0.2);
    text-align: center;
    transition: transform 0.3s ease;
    border: 1px solid #F8BBD0;
}

.card:hover {
    transform: translateY(-5px);
}

.card h3 {
    color: #795548;
    margin-bottom: 15px;
    font-size: 1.1em;
}

.valor {
    font-size: 1.8em;
    font-weight: bold;
}

.positivo {
    color: #388e3c;
}

.negativo {
    color: #e53935;
}

/* Actions Bar */
.actions-bar {
    display: flex;
    gap: 15px;
    margin-bottom: 30px;
    flex-wrap: wrap;
}

.btn-primary {
    background: linear-gradient(135deg, #F8BBD0 0%, #f48fb1 100%);
    color: #5d4037;
    padding: 15px 25px;
    border: none;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(248, 187, 208, 0.3);
    min-height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(248, 187, 208, 0.4);
}

.btn-secondary {
    background: linear-gradient(135deg, #90CAF9 0%, #64B5F6 100%);
    color: white;
    padding: 15px 25px;
    border: none;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(144, 202, 249, 0.3);
    min-height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(144, 202, 249, 0.4);
}

.btn-clear {
    background: #FFF8F0;
    color: #795548;
    padding: 12px 20px;
    border: 2px solid #F8BBD0;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    min-height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-clear:hover {
    background: #F8BBD0;
    transform: translateY(-1px);
}

.btn-cancel {
    background: #e0e0e0;
    color: #666;
    padding: 12px 25px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    min-height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-cancel:hover {
    background: #d5d5d5;
}

/* Form Section */
.form-section {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(248, 187, 208, 0.2);
    border: 1px solid #F8BBD0;
}

.form-section h3 {
    margin-bottom: 20px;
    color: #5d4037;
    font-size: 1.4em;
}

.filtros {
    margin-bottom: 25px;
}

.filtros-container {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    align-items: center;
}

.filtros-container select {
    flex: 1;
    min-width: 200px;
    padding: 12px;
    border: 2px solid #F8BBD0;
    border-radius: 8px;
    background-color: #FFF8F0;
    font-size: 16px;
    transition: all 0.3s ease;
    min-height: 48px;
}

.filtros-container select:focus {
    outline: none;
    border-color: #f48fb1;
    background-color: white;
}

/* Transações */
.transacao-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid #F8BBD0;
    transition: all 0.3s ease;
    cursor: pointer;
    background: white;
    margin-bottom: 8px;
    border-radius: 8px;
    border-left: 4px solid transparent;
    min-height: 60px;
}

.transacao-item:hover {
    background-color: #FFF8F0;
    transform: translateX(5px);
    border-left-color: #F8BBD0;
}

.transacao-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.transacao-info {
    flex: 1;
}

.transacao-descricao {
    font-weight: 600;
    margin-bottom: 8px;
    color: #5d4037;
    font-size: 1.1em;
}

.transacao-detalhes {
    color: #795548;
    font-size: 0.9em;
}

.transacao-valor {
    font-weight: bold;
    font-size: 1.2em;
    margin-right: 15px;
}

.receita {
    color: #388e3c;
}

.despesa {
    color: #e53935;
}

.mensagem-vazia {
    text-align: center;
    color: #795548;
    padding: 60px 40px;
    font-style: italic;
    font-size: 1.1em;
    background: white;
    border-radius: 8px;
    border: 2px dashed #F8BBD0;
}

/* Modais - CORREÇÃO PRINCIPAL */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.6);
    animation: fadeIn 0.3s;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.modal-content {
    background-color: white;
    margin: 5% auto;
    padding: 0;
    border-radius: 15px;
    width: 90%;
    max-width: 500px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    animation: slideIn 0.3s;
    border: 2px solid #F8BBD0;
    overflow: hidden;
    position: relative;
}

.modal-content.large {
    max-width: 800px;
}

.modal-header {
    background: linear-gradient(135deg, #F8BBD0 0%, #f48fb1 100%);
    padding: 25px;
    border-radius: 15px 15px 0 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2px solid #f48fb1;
    position: sticky;
    top: 0;
    z-index: 10;
}

.modal-header h3 {
    color: #5d4037;
    margin: 0;
    font-size: 1.5em;
    font-weight: 600;
}

.close {
    color: #5d4037;
    font-size: 32px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    line-height: 1;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    padding: 0;
}

.close:hover {
    color: #e53935;
    transform: scale(1.1);
}

/* Form no Modal - CORREÇÃO DOS INPUTS */
.modal form {
    padding: 30px;
    background: white;
}

.form-group {
    margin-bottom: 25px;
}

label {
    display: block;
    margin-bottom: 10px;
    font-weight: 600;
    color: #5d4037;
    font-size: 1.1em;
}

input, select {
    width: 100%;
    padding: 15px;
    border: 2px solid #F8BBD0;
    border-radius: 10px;
    font-size: 16px;
    transition: all 0.3s ease;
    background-color: white;
    font-family: inherit;
    min-height: 50px;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
}

/* CORREÇÃO ESPECÍFICA PARA MOBILE */
input[type="text"],
input[type="number"],
input[type="date"],
select {
    font-size: 16px !important; /* Impede zoom no iOS */
    transform: translateZ(0); /* Melhora performance */
}

input:focus, select:focus {
    outline: none;
    border-color: #f48fb1;
    background-color: white;
    box-shadow: 0 0 0 3px rgba(248, 187, 208, 0.3);
}

input::placeholder {
    color: #999;
    opacity: 0.7;
}

/* Placeholder personalizado para select */
select:invalid {
    color: #999;
}

/* Estilos específicos para inputs */
input[type="number"] {
    font-size: 18px;
    font-weight: 500;
}

input[type="date"] {
    font-family: inherit;
}

input[type="text"] {
    font-size: 16px;
}

select {
    cursor: pointer;
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%235d4037' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 15px center;
    background-size: 16px;
    padding-right: 45px;
}

.modal-actions {
    display: flex;
    gap: 15px;
    justify-content: flex-end;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid #F8BBD0;
}

.modal-actions button {
    min-height: 50px;
    font-size: 16px;
    padding: 15px 25px;
}

/* Despesas no Modal */
.despesas-content {
    padding: 25px;
    max-height: 70vh;
    overflow-y: auto;
}

.despesas-resumo {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.resumo-card {
    background: white;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    border: 1px solid #F8BBD0;
    box-shadow: 0 2px 8px rgba(248, 187, 208, 0.1);
}

.resumo-card h4 {
    color: #795548;
    margin-bottom: 10px;
    font-size: 0.9em;
    font-weight: 600;
}

.despesas-por-categoria {
    margin-bottom: 30px;
}

.despesas-por-categoria h4 {
    color: #5d4037;
    margin-bottom: 15px;
    font-size: 1.2em;
    font-weight: 600;
}

.categoria-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    background: white;
    margin-bottom: 10px;
    border-radius: 8px;
    border-left: 4px solid #F8BBD0;
    transition: all 0.3s ease;
}

.categoria-item:hover {
    transform: translateX(5px);
    background: #FFF8F0;
}

.categoria-info {
    display: flex;
    align-items: center;
    gap: 15px;
}

.categoria-nome {
    font-weight: 600;
    color: #5d4037;
}

.categoria-valor {
    font-weight: bold;
    color: #e53935;
    font-size: 1.1em;
}

.despesas-lista h4 {
    color: #5d4037;
    margin-bottom: 15px;
    font-size: 1.2em;
    font-weight: 600;
}

.despesa-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    background: white;
    margin-bottom: 10px;
    border-radius: 8px;
    border-left: 4px solid #e53935;
    transition: all 0.3s ease;
}

.despesa-item:hover {
    transform: translateX(5px);
    background: #FFF8F0;
}

/* Notificações */
.notificacao {
    position: fixed;
    top: 20px;
    right: 20px;
    padding: 20px 25px;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    z-index: 1000;
    transform: translateX(400px);
    transition: transform 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    max-width: 350px;
    backdrop-filter: blur(10px);
}

.notificacao.mostrar {
    transform: translateX(0);
}

.notificacao.sucesso {
    background: linear-gradient(135deg, #a5d6a7 0%, #81c784 100%);
    color: #1b5e20;
    border-left: 5px solid #388e3c;
}

.notificacao.erro {
    background: linear-gradient(135deg, #ef9a9a 0%, #e57373 100%);
    color: #b71c1c;
    border-left: 5px solid #d32f2f;
}

.notificacao-conteudo {
    display: flex;
    align-items: center;
    gap: 15px;
}

.notificacao-icon {
    font-size: 24px;
    flex-shrink: 0;
}

.notificacao-texto h4 {
    margin: 0 0 5px 0;
    font-size: 16px;
    font-weight: 600;
}

.notificacao-texto p {
    margin: 0;
    font-size: 14px;
    opacity: 0.9;
}

.notificacao-fechar {
    background: none;
    border: none;
    font-size: 18px;
    cursor: pointer;
    padding: 0;
    margin-left: auto;
    color: inherit;
    opacity: 0.7;
    transition: opacity 0.3s;
    min-height: auto;
}

.notificacao-fechar:hover {
    opacity: 1;
}

/* Animações */
@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes slideIn {
    from { transform: translateY(-50px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

/* Scrollbar personalizada */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: #FFF8F0;
    border-radius: 4px;
}

::-webkit-scrollbar-thumb {
    background: #F8BBD0;
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: #f48fb1;
}

/* Responsividade */
@media (max-width: 768px) {
    html {
        font-size: 14px;
    }
    
    .container {
        padding: 10px;
    }
    
    header {
        padding: 20px;
    }
    
    header h1 {
        font-size: 2em;
    }
    
    .header-controls {
        flex-direction: column;
        align-items: stretch;
        gap: 15px;
    }
    
    .competencia-selector {
        justify-content: center;
    }
    
    .dashboard {
        grid-template-columns: 1fr;
    }
    
    .actions-bar {
        flex-direction: column;
    }
    
    .btn-primary, .btn-secondary {
        width: 100%;
        text-align: center;
        font-size: 16px;
    }
    
    .filtros-container {
        flex-direction: column;
    }
    
    .filtros-container select {
        min-width: 100%;
        font-size: 16px;
    }
    
    .transacao-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
        padding: 15px;
    }
    
    .transacao-valor {
        margin-right: 0;
        align-self: flex-end;
    }
    
    .modal-content {
        margin: 10% auto;
        width: 95%;
        max-width: none;
    }
    
    .modal-actions {
        flex-direction: column;
    }
    
    .modal-actions button {
        width: 100%;
        font-size: 16px;
    }
    
    .despesas-resumo {
        grid-template-columns: 1fr;
    }
    
    .notificacao {
        top: 10px;
        right: 10px;
        left: 10px;
        max-width: none;
    }
    
    /* CORREÇÃO PARA MOBILE - inputs maiores */
    input, select {
        font-size: 16px !important;
        min-height: 54px;
        padding: 16px;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 5px;
    }
    
    header {
        padding: 15px;
    }
    
    header h1 {
        font-size: 1.7em;
    }
    
    .card {
        padding: 20px;
    }
    
    .form-section {
        padding: 20px;
    }
    
    .modal form {
        padding: 20px;
    }
    
    .modal-header {
        padding: 20px;
    }
    
    .despesas-content {
        padding: 20px;
    }
    
    /* Garantir que os botões sejam clicáveis */
    button, input[type="submit"], input[type="button"] {
        min-height: 44px;
        font-size: 16px;
    }
}

/* CORREÇÃO EXTRA PARA ZOOM NO iOS */
@viewport {
    width: device-width;
    zoom: 1.0;
}

@-ms-viewport {
    width: device-width;
}

/* Garantir que os inputs não forcem zoom */
@media screen and (max-width: 768px) {
    input[type="text"],
    input[type="number"],
    input[type="email"],
    input[type="tel"],
    input[type="password"],
    input[type="date"],
    select,
    textarea {
        font-size: 16px !important;
        transform: scale(1);
    }
}
